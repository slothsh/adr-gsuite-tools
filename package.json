{
  "type": "module",
  "name": "Adrenaline Studios Project Manager",
  "version": "0.0.0",
  "author": "Stefan Olivier",
  "authorEmail": "stefan@adrenaline.global",
  "authorWebsite": "https://stefanolivier.com",
  "scripts": {
    "build": "npm run configure && npm run build-client-environment npm run build-library && npm run build-markdown && npm run build-static && npm run assemble",
    "development": "npm run configure && npm run build-client-environment && npm run build-markdown && npm run build-markdown-dev",
    "configure": "mkdir -p build && npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/configure.js ./scripts/configure.ts && BASE_DIR=. node ./build/configure.js",
    "assemble": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/assemble.js ./scripts/assemble.ts && BASE_DIR=. node ./build/assemble.js",
    "serve": "npm run development && esbuild --serve=localhost:8888 --servedir=./build/development",
    "build-client-environment": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/buildClientEnvironment.js ./scripts/buildClientEnvironment.ts && BASE_DIR=. node ./build/buildClientEnvironment.js",
    "build-library": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/buildLibrary.js ./scripts/buildLibrary.ts && BASE_DIR=. node ./build/buildLibrary.js",
    "build-markdown": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/buildMarkdown.js ./scripts/buildMarkdown.ts && BASE_DIR=. node ./build/buildMarkdown.js",
    "build-static": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/buildStatic.js ./scripts/buildStatic.ts && BASE_DIR=. node ./build/buildStatic.js",
    "build-markdown-dev": "npx esbuild --format=esm --platform=node --target=node21.7 --bundle --packages=external --outfile=./build/buildMarkdownDevelopment.js ./scripts/buildMarkdownDevelopment.ts && BASE_DIR=. node ./build/buildMarkdownDevelopment.js",
    "clean": "rm -rf ./build"
  },
  "keywords": [],
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "@types/google-apps-script": "^1.0.83",
    "@types/node": "^20.12.13",
    "@types/rollup": "^0.54.0",
    "acorn": "^8.11.3",
    "bootstrap": "^5.3.3",
    "esbuild": "0.21.4",
    "fast-glob": "^3.3.2",
    "handlebars": "^4.7.8",
    "jsdom": "^24.1.0",
    "node-html-parser": "^6.1.13",
    "prettier": "^3.3.0",
    "purgecss": "^6.0.0",
    "rollup": "^4.18.0",
    "sass": "^1.77.2",
    "ts2gas": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
